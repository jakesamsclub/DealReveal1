<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_corner"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="30dp"
    android:radius="30dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="16dp"

        >



        <ImageView
            android:id="@+id/dealyelp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@+id/extratitle"
            android:layout_toLeftOf="@+id/extratitle"
            android:src="@drawable/yelp" />

        <ImageView
            android:id="@+id/Insta"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_toStartOf="@+id/dealyelp"
            android:layout_toLeftOf="@+id/dealyelp"
            android:src="@drawable/insta" />

        <TextView
            android:id="@+id/extratitle"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="Extra"
            android:textSize="35sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/dealwebsite"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/extratitle"
            android:layout_toRightOf="@+id/extratitle"
            android:src="@drawable/web" />

        <ImageView
            android:id="@+id/Facebook"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/dealwebsite"
            android:layout_toRightOf="@+id/dealwebsite"
            android:src="@drawable/facebook" />

        <Button
            android:id="@+id/submitnewdealtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extratitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_edge"
            android:fontFamily="@font/asapsemibold"
            android:gravity="center"
            android:text="Submit New Deal"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/Deletedealbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/submitnewdealtitle"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Delete New Deal"
            android:background="@drawable/rounded_edge"
            android:fontFamily="@font/asapsemibold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#000000"/>

        <TextView
            android:id="@+id/textView53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Deletedealbutton"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="" />


    </RelativeLayout>
</RelativeLayout>


